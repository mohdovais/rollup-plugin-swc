{
    "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "declaration": true,
      "declarationDir": "./dist",
      "esModuleInterop": true,
      "inlineSourceMap": false,
      "lib": ["esnext"],
      "listEmittedFiles": false,
      "listFiles": false,
      "module": "esnext",
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "outDir": "transpiled",
      "pretty": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2019",
      "traceResolution": false,
      "types": ["node"]
    },
    "compileOnSave": false,
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
  }